<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@id/goToWalletActivityButton"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Floating Action Button in the background -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/populateMapButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:elevation="6dp"/>
        <!-- ImageView on top of the Floating Action Button -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:elevation="7dp"
            android:src="@drawable/gaming_pc"
            android:scaleType="centerCrop"/>
    </FrameLayout>




    <TextView
        android:id="@+id/mapLoadingOverview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:text="Map is loading..."
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:visibility="visible" />




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <!-- TODO: Make the "Slider Box" large enough to fit the text -->
    <com.google.android.material.slider.Slider
        android:id="@+id/latencySlider"
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:rotation="270"
        android:valueFrom="50"
        android:valueTo="250"
        android:stepSize="50"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sliderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/latencySlider"
        app:layout_constraintTop_toTopOf="@+id/latencySlider"
        app:layout_constraintBottom_toBottomOf="@+id/latencySlider" />


    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Back"
        android:padding="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/goToWalletActivityButton"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <!-- Wallet Button -->
    <Button
        android:id="@+id/goToWalletActivityButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Wallet"
        android:padding="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"/>

    
</androidx.constraintlayout.widget.ConstraintLayout>